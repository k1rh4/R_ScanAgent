# Provider: openai | anthropic | gemini
LLM_PROVIDER=openai

# LLM request behavior
LLM_TIMEOUT=30
LLM_RETRIES=2
LLM_RETRY_BACKOFF=0.5
LLM_RETRY_MODE=exponential  # exponential | fixed
LLM_RETRY_STATUS=429,500,502,503,504

# OpenAI
# Local OpenAI-compatible server:
# - Host run:      OPENAI_BASE_URL=http://127.0.0.1:8001/v1
# - Docker compose: OPENAI_BASE_URL=http://host.docker.internal:8001/v1
# API key can stay empty for local servers that don't require auth.
OPENAI_API_KEY=
OPENAI_BASE_URL=http://host.docker.internal:8001/v1
OPENAI_MODEL=gpt-5

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-pro
